generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int @id @default(autoincrement())
  name            String
  email           String @unique
  address         String
  password        String
  role            Role
  rating          Rating[]
  store           Store? @relation("userStore")
}

model Store {
  id              Int @id @default(autoincrement())
  name            String
  email           String
  address         String
  ownerId         Int @unique
  avgratings      Int?
  owner           User @relation("userStore",fields: [ownerId], references: [id])
  ratings         Rating[]
}

model Rating {
  id            Int @id @default(autoincrement())
  rating        Int
  user          User @relation(fields: [userId], references: [id])
  userId        Int
  store         Store @relation(fields: [storeId], references: [id])
  storeId       Int
}

enum Role{
  ADMIN
  USER
  STORE_OWNER
}
